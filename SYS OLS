SELECT VALUE FROM v$option WHERE parameter = 'Oracle Label Security';
SELECT status FROM dba_ols_status WHERE name = 'OLS_CONFIGURE_STATUS';
EXEC LBACSYS.CONFIGURE_OLS;
EXEC LBACSYS.OLS_ENFORCEMENT.ENABLE_OLS;
shutdown IMMEDIATE;
startup;
ALTER PLUGGABLE DATABASE QUANLYNHANVIEN OPEN READ WRITE;
alter session set container=QUANLYNHANVIEN;
ALTER USER "LBACSYS" DEFAULT TABLESPACE "SYSTEM" TEMPORARY TABLESPACE "TEMP" ACCOUNT UNLOCK;
ALTER SESSION SET "_ORACLE_SCRIPT"=TRUE;
CREATE USER OLS_NHOM11 IDENTIFIED BY "123" CONTAINER = ALL;
GRANT CONNECT,RESOURCE,SELECT_CATALOG_ROLE TO OLS_NHOM11;
GRANT UNLIMITED TABLESPACE TO OLS_NHOM11;
GRANT SELECT ANY DICTIONARY TO OLS_NHOM11;
--B10: CẤP QUYỀN CHO ADMIN OLS
GRANT EXECUTE ON sa_components TO OLS_NHOM11 WITH GRANT OPTION;
GRANT EXECUTE ON sa_user_admin TO OLS_NHOM11 WITH GRANT OPTION;
GRANT EXECUTE ON sa_label_admin TO OLS_NHOM11 WITH GRANT OPTION;
GRANT EXECUTE ON sa_policy_admin TO OLS_NHOM11 WITH GRANT OPTION;
GRANT EXECUTE ON sa_audit_admin TO OLS_NHOM11 WITH GRANT OPTION;
GRANT EXECUTE ON SA_SESSION TO OLS_NHOM11 WITH GRANT OPTION;
GRANT LBAC_DBA TO OLS_NHOM11;
GRANT EXECUTE ON sa_sysdba TO OLS_NHOM11;
GRANT EXECUTE ON to_lbac_data_label TO OLS_NHOM11;
GRANT INHERIT PRIVILEGES ON USER SYS TO LBACSYS;
GRANT CREATE USER TO OLS_NHOM11;


BEGIN
SA_SYSDBA.DROP_POLICY(
    policy_name => 'OLS_QLNV'
);
END;
/

BEGIN
SA_SYSDBA.CREATE_POLICY(
    policy_name => 'OLS_QLNV',
    column_name => 'OLS_label',
    default_options => 'read_control'
);
END;
/

EXEC SA_SYSDBA.ENABLE_POLICY ('OLS_QLNV');
--Disconenct
--Chia theo cap bac
EXECUTE SA_COMPONENTS.CREATE_LEVEL('OLS_QLNV',200,'NV','NHANVIEN');
EXECUTE SA_COMPONENTS.CREATE_LEVEL('OLS_QLNV',400,'TP','TRUONGPHONG');
EXECUTE SA_COMPONENTS.CREATE_LEVEL('OLS_QLNV',600,'GD','GIAMDOC');
--Chia theo linh vuc hoat dong quan trong
EXECUTE SA_COMPONENTS.CREATE_COMPARTMENT('OLS_QLNV',100,'GC','GIACONG');
EXECUTE SA_COMPONENTS.CREATE_COMPARTMENT('OLS_QLNV',120,'SX','SANXUAT');
EXECUTE SA_COMPONENTS.CREATE_COMPARTMENT('OLS_QLNV',140,'MB','MUABAN');
--Chia theo chi nhanh tu bac vao nam
EXECUTE SA_COMPONENTS.CREATE_GROUP('OLS_QLNV',10,'N','NAM');
EXECUTE SA_COMPONENTS.CREATE_GROUP('OLS_QLNV',30,'T','TRUNG');
EXECUTE SA_COMPONENTS.CREATE_GROUP('OLS_QLNV',50,'B','BAC');
/
EXECUTE SA_USER_ADMIN.SET_USER_PRIVS('OLS_QLNV','OLS_QLNV','FULL,PROFILE_ACCESS');
/
alter session set "_ORACLE_SCRIPT"=TRUE;
--1 GIAM DOC XEM TOAN BO DU LIEU
EXECUTE SA_LABEL_ADMIN.CREATE_LABEL('OLS_QLNV', 4963, 'GD');
--1 TRUONG PHONG PHU TRACH LINH VUC SAN XUAT MIEN NAM
EXECUTE SA_LABEL_ADMIN.CREATE_LABEL('OLS_QLNV', 0189, 'GD:SX:N');
--1 GIAM DOC PHU TRACH BAT KY LINH VUC NAO O CHINH NHANH MIEN BAC
EXECUTE SA_LABEL_ADMIN.CREATE_LABEL('OLS_QLNV', 3468, 'GD::B');
